<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import yabj.sch3sap.FkTimeChooser?>

<VBox fx:id="ExtPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="yabj.sch3sap.AppController">
   <children>
      <HBox fx:id="IntPane" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="list" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <placeholder>
                  <Label fx:id="labelEmpty" text="Черга порожня. Додайте першу музику.">
                  </Label>
               </placeholder>
               <columns>
                  <TableColumn fx:id="time" prefWidth="90.0" text="Час">
                     <cellValueFactory><PropertyValueFactory property="time" /></cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="name" prefWidth="140.0" text="Назва">
                     <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="file" prefWidth="200.0" text="Файл">
                     <cellValueFactory><PropertyValueFactory property="path" /></cellValueFactory>
                  </TableColumn>
               </columns>
            </TableView>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox fx:id="rightPane" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label fx:id="labelAdd" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Додати аудіо">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                  </Label>
                  <Separator maxWidth="1.7976931348623157E308">
                     <padding>
                        <Insets bottom="3.0" top="3.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Separator>
                  <Label fx:id="labelAddTime" text="Виберіть час:" />
                  <FkTimeChooser fx:id="dateTime">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </FkTimeChooser>
                  <Region prefHeight="5.0" prefWidth="200.0" />
                  <Label fx:id="labelFile" text="Виберіть файл:" />
                  <HBox fx:id="filePane" prefWidth="200.0">
                     <children>
                        <TextField fx:id="path" promptText="Шлях" />
                        <Button fx:id="choose" mnemonicParsing="false" onAction="#onFileSelect" text="···">
                           <font>
                              <Font name="System Bold Italic" size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Region layoutX="20.0" layoutY="85.0" prefHeight="10.0" prefWidth="200.0" />
                  <Button fx:id="add" mnemonicParsing="false" onAction="#onAdd" text="Додати" />
                  <Region layoutX="20.0" layoutY="132.0" prefHeight="15.0" prefWidth="200.0" />
                  <Separator layoutX="20.0" layoutY="34.0" maxWidth="1.7976931348623157E308">
                     <padding>
                        <Insets bottom="3.0" top="3.0" />
                     </padding>
                  </Separator>
                  <Label fx:id="labelEdit" alignment="CENTER" layoutX="20.0" layoutY="10.0" maxWidth="1.7976931348623157E308" text="Редагувати">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="labelEditTime" layoutX="58.0" layoutY="43.0" text="Виберіть час:" />
                  <FkTimeChooser fx:id="editDateTime">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </FkTimeChooser>
                  <Region layoutX="20.0" layoutY="85.0" prefHeight="5.0" prefWidth="200.0" />
                  <Label fx:id="labelEditFile" layoutX="51.0" layoutY="90.0" text="Виберіть файл:" />
                  <HBox fx:id="editFilePane" layoutX="20.0" layoutY="106.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="editPath" promptText="Шлях" />
                        <Button fx:id="editChoose" mnemonicParsing="false" onAction="#onFileEdit" text="···">
                           <font>
                              <Font name="System Bold Italic" size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Region layoutX="20.0" layoutY="132.0" prefHeight="10.0" prefWidth="200.0" />
                  <HBox alignment="TOP_CENTER" spacing="5.0">
                     <children>
                        <Button fx:id="edit" mnemonicParsing="false" onAction="#onEdit" text="Змінити" HBox.hgrow="ALWAYS" />
                        <Button fx:id="delete" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDelete" text="Видалити" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <BorderPane fx:id="bottomPane" maxHeight="200.0" prefHeight="75.0" prefWidth="638.0">
         <padding>
            <Insets bottom="5.0" top="10.0" />
         </padding>
         <top>
            <Separator prefWidth="638.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="-10.0" />
               </BorderPane.margin>
            </Separator>
         </top>
         <left>
            <HBox fx:id="primaryPanel" alignment="CENTER" prefWidth="310.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="execute" mnemonicParsing="false" onAction="#onExecute" text="УВІМКНУТИ" textFill="#009000">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
                  <Region prefWidth="15.0" />
                  <Button fx:id="pause" mnemonicParsing="false" onAction="#onPause" text="⏸️" visible="false">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                  <Button fx:id="stop" layoutX="222.0" layoutY="24.0" mnemonicParsing="false" onAction="#onStop" text="⏹️" visible="false">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </left>
         <right>
            <HBox alignment="CENTER" prefHeight="67.0" prefWidth="135.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="settings" mnemonicParsing="false" onAction="#onSettings" text="⚙" disable="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="information" layoutX="87.0" layoutY="24.0" mnemonicParsing="false" onAction="#onInfo" text="🛈" disable="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </right>
      </BorderPane>
   </children>
</VBox>
